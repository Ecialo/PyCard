<-HexCellWidget>:
    id: hexcell
    canvas:
        PushMatrix:
        Color:
            rgba: 1, 1, 1, 1
        Translate:
            xy: self.pos
        Mesh:
            vertices: self.mesh_vertices
            texture: self.mesh_texture
            mode: 'triangle_fan'
            indices: range(6)
        Color:
            rgba: 0, 0, 0, 0.5*self.is_selected
        Mesh:
            vertices: self.mesh_vertices
            mode: 'triangle_fan'
            indices: range(6)
        PopMatrix:
